<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h3>Cars available from <%= dateFrom %> to <%= dateTo%></h3>
      </div>
    </div>
    
    <div class="row">
      <% cars.forEach(function(car) { %>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src="<%= car.image %>" alt="image">
            <div class="caption">
              <h4> <%= car.make %> <%= car.model %>, <%= car.year %></h4>
            </div>
            <form action="/cars/<%= car._id %>" method="get">
              <div class="form-group">
                <input class="form-control" type="hidden" name="dateFrom" value=<%= dateFrom %>>
              </div>
              <div class="form-group">
                <input class="form-control" type="hidden" name="dateTo" value=<%= dateTo %>>
              </div>
              <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">More details</button>
              </div>
            </form>
          </div>
        </div>
      <% }); %>
    </div>
  </div>


<% include ../partials/footer %>