<% include ../partials/header %>

<div class="container add-edit-forms">
	<div class="row">
		<h1 class="form-headers">Create a new car rental ad</h1>
		<form action="/cars" method="post">
			<div class="form-group">
				<input class="form-control" type="text" name="carMake" placeholder="Car make" required="">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="carModel" placeholder="Car model" required="">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="carYear" placeholder="Car year" required="">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="carPrice" placeholder="Price per day" min="0.01" step="0.01" required="">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="carImage" placeholder="Image URL of the car" required="">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="carDesc" placeholder="Short description of the car" required="">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Add car</button>
			</div>
		</form>
	</div>
</div>


<% include ../partials/footer %>