<% include ../partials/header %>

  <div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>Welcome to Instarent</h1>
        <p>View our car rental deals from all over the world</p>
        <p>
          <a class="btn btn-primary btn-lg" href="/cars/new">Put your car up for rent</a>
        </p>
      </div>
    </header>
    
    <div class="row">
      <div class="col-lg-12">
        <h3>Our Most Popular Cars</h3>
      </div>
    </div>
    
    <div class="row">
      <% cars.forEach(function(car) { %>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src="<%= car.image %>" alt="image">
            <div class="caption">
              <h4> <%= car.make %> <%= car.model %>, <%= car.year %></h4>
            </div>
            <p>
              <a class="btn btn-primary" href="/cars/<%= car._id %>">More info</a>
            </p>
          </div>
        </div>
      <% }); %>
    </div>
  </div>


<% include ../partials/footer %>