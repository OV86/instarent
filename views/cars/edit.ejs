<% include ../partials/header %>

<div class="container add-edit-forms">
	<div class="row">
		<h1 class="form-headers">Edit ad for <%= car.make %> <%= car.model %>, <%= car.year %></h1>
		<form action="/cars/<%= car._id %>?_method=PUT" method="post">
			<div class="form-group">
				<input class="form-control" type="text" name="car[make]" value="<%= car.make %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="car[model]" value="<%= car.model %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="car[year]" value="<%= car.year %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="car[price]" value="<%= car.price %>" min="0.01" step="0.01">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="car[image]" value="<%= car.image %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="car[description]" value="<%= car.description %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Save</button>
			</div>
		</form>

		<a href="/cars">Go Back</a>
	</div>
</div>


<% include ../partials/footer %>