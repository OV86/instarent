<% include ./partials/header %>

<div class="container login-register-forms">
  <!-- <h1 class="form-headers">Please login</h1> -->
    <form action="/login" method="POST">
      <div class="form-group">
        <label for="inputUsername">Your username</label>
        <input type="text" name="username" class="form-control" id="inputUsername"  placeholder="Your username">
      </div>
      <div class="form-group">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Your password">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

