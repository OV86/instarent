<% include ./partials/header %>

<div class="container login-register-forms">
  <h1 class="form-headers">Please create a new account</h1>
  <form action="/register" method="POST">
    <div class="form-group">
      <label for="inputUsername">Enter username</label>
      <input type="text" name="username" class="form-control" id="inputUsername"  placeholder="Your username">
    </div>
    <div class="form-group">
      <label for="inputPassword">Enter password</label>
      <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Your password">
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
  </form>
</div>

<% include ./partials/footer %>