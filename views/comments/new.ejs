<% include ../partials/header %>

<div class="container add-edit-forms">
	<div class="row">
		<h1 class="form-headers">Add new comment to <%= car.make + " " + car.model %></h1>
		<form action="/cars/<%= car._id %>/comments" method="post">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="text">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Add comment</button>
			</div>
		</form>

		<a href="/cars/<%= car._id %>">Go Back</a>
	</div>
</div>


<% include ../partials/footer %>