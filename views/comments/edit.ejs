<% include ../partials/header %>

<div class="container add-edit-forms">
	<div class="row">
		<h1 class="form-headers">Edit comment</h1>
		<form action="/cars/<%= car_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Save</button>
			</div>
		</form>

		<a href="/cars/<%= car_id %>">Go Back</a>
	</div>
</div>


<% include ../partials/footer %>